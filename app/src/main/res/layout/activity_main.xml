<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="30dp"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/rlTitle"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivDts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:src="@drawable/logo"
            tools:ignore="ContentDescription" />

        <TextView
            android:text="SQLite Demo 01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:textColor="#000"
            android:layout_above="@+id/ivDts"
            android:textSize="18sp"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />

        <TextView
            android:id="@+id/tvText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="VSGA Tahap II"
            android:textColor="#000"
            android:layout_centerHorizontal="true"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText,ObsoleteLayoutParam" />
    </LinearLayout>

    <Button
        android:id="@+id/btUpgrade"
        android:text="Upgrade Database"
        android:layout_below="@+id/rlTitle"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <Button
        android:id="@+id/btInsert"
        android:text="Insert A Friend"
        android:layout_below="@+id/btUpgrade"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <Button
        android:id="@+id/btgetAllFriend"
        android:text="Get All Friend"
        android:layout_below="@+id/btInsert"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <EditText
        android:id="@+id/etID"
        android:hint="Friend ID"
        android:gravity="center_horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/btgetAllFriend"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        tools:ignore="Autofill,HardcodedText,ObsoleteLayoutParam,TextFields,UnknownId" />

    <Button
        android:id="@+id/btUpdate"
        android:text="Update Friend"
        android:layout_below="@+id/etID"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

    <Button
        android:id="@+id/btDelete"
        android:text="Delete A Friend"
        android:layout_below="@+id/btUpdate"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam,UnknownId" />

    <Button
        android:id="@+id/btGetAFriend"
        android:text="Get A Friend"
        android:layout_below="@+id/btDelete"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="HardcodedText,ObsoleteLayoutParam" />

</LinearLayout>